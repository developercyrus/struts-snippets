<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="helloWorldForm" type="example1.helloworld.model.HelloWorldForm" />
    </form-beans>

    <action-mappings>
        <action path="/hello" name="helloWorldForm" type="example1.helloworld.controller.HelloWorldAction"> 
            <forward name="helloUser" path="/WEB-INF/example1/helloworld/view/helloworld.jsp"/> 
        </action> 
    </action-mappings>
</struts-config>
